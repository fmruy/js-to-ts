---
interface Props {
  code: string;
  language?: string;
  title?: string;
}

const { code, language = "typescript", title } = Astro.props;
---

<div class="code-block">
  {title && <div class="code-title">{title}</div>}
  <pre><code class={`language-${language}`}>{code.trim()}</code></pre>
</div>

<style>
  .code-block {
    margin: 1.5rem 0;
    border-radius: 8px;
    overflow: hidden;
    background-color: #2d2d2d;
    font-family: 'JetBrains Mono', 'Fira Code', Menlo, Monaco, 'Courier New', monospace;
  }

  .code-title {
    background-color: #444;
    color: #ddd;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    font-weight: 500;
    border-bottom: 1px solid #555;
  }

  pre {
    margin: 0;
    padding: 1rem;
    overflow-x: auto;
  }

  code {
    color: #e6e6e6;
    font-size: 0.9rem;
    line-height: 1.5;
  }
</style>

<script>
  // You might want to add syntax highlighting with libraries like Prism.js or highlight.js
  // This is just a placeholder for where that initialization would go
</script> 